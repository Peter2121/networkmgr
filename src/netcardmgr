        dnsLabel.set_margin_end(58)
        dnsLabel.set_margin_start(30)

        dnsEntry = Gtk.Entry()
        dnsEntry.set_margin_end(30)
        DNSList = [(key, value) for key, value in currentSettings.items() if key.startswith("DNS Server")]
        i = 0
        DNSString = ""
        imax=len(DNSList)
        while i < imax:
            DNSString = DNSString + DNSList[i][1]
            if i + 1 < imax:
                DNSString = DNSString + ","
